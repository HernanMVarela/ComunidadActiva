<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/dialog_corner_bg"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/txtAtenderDenuncia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp"
        android:text="NOTIFICAR Y CERRAR DENUNCIA"
        android:textAlignment="center"
        android:layout_marginHorizontal="10dp"
        android:textSize="20sp"
        tools:text="NOTIFICAR Y CERRAR DENUNCIA" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp"
        android:gravity="start"
        android:text=""
        android:textSize="20sp"
        android:layout_marginHorizontal="25dp"
        tools:text="Resolución" />

    <EditText
        android:id="@+id/etResolucionDenuncia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edittext_white_rounded"
        android:gravity="top"
        android:hint="Ingrese la resolución de la denuncia"
        android:inputType="textMultiLine"
        android:lines="5"
        android:minHeight="120dp"
        android:padding="4dp"
        android:textAlignment="gravity"
        android:textSize="18sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:paddingVertical="10dp">

        <Button
            android:id="@+id/btnDesestimarDenuncia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:background="@drawable/boton_suspender_usuario"
            android:text="DESESTIMAR DENUNCIA" />

        <Button
            android:id="@+id/btnCerrarDenuncia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:background="@drawable/boton_eliminar_publicacion"
            android:text="CERRAR PUBLICACION" />

    </LinearLayout>

</LinearLayout>
