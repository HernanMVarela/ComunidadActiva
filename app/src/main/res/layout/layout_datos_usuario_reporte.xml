<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/dialog_corner_bg"
    android:padding="10dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tvUsernameDetalleReporte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="@drawable/dialog_corner_bgd"
        android:layout_marginVertical="10dp"
        android:paddingVertical="5dp"
        android:textSize="20sp"
        android:text="Prueba TEXTO"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvNombreDetalleReporte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="7dp"
        android:textSize="20sp"
        android:text="Prueba TEXTO"
        android:textStyle="italic"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black"
        android:layout_marginVertical="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:gravity="center"
        android:background="@drawable/edittext_white_rounded"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPuntajeDetalleReporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Prueba TEXTO"
            android:layout_marginVertical="5dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvFechaNacDetalleReporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18sp"
            android:text="Prueba TEXTO"
            android:layout_marginVertical="5dp"/>

        <TextView
            android:id="@+id/tvFechaCreacionDetalleReporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Prueba TEXTO"
            android:textSize="18sp"
            android:layout_marginVertical="5dp"/>
    </LinearLayout>


</LinearLayout>