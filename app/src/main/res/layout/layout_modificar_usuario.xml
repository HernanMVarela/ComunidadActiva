<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/dialog_corner_bg"
        android:paddingHorizontal="15dp"
        android:gravity="center_horizontal">
    <TextView
        android:id="@+id/txt_modificar_usuario_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:text="Editar perfil del usuario"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black"
        android:layout_marginVertical="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:text="Datos personales"/>
    <EditText
        android:id="@+id/etx_modificar_usuario_telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="35dp"
        android:textSize="20sp"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        android:hint="Teléfono"
        android:background="@drawable/edittext_white_rounded"/>

    <EditText
        android:id="@+id/etx_modificar_usuario_correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="35dp"
        android:textSize="20sp"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        android:hint="Correo Electrónico"
        android:background="@drawable/edittext_white_rounded"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black"
        android:layout_marginVertical="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Atributos de cuenta"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:text="@string/contrase_a"/>

    <EditText
        android:id="@+id/etx_modificar_usuario_pass1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="35dp"
        android:textSize="20sp"
        android:padding="5dp"
        android:layout_marginVertical="5dp"
        android:inputType="textPassword"
        android:hint="@string/nueva_contrase_a"
        android:background="@drawable/edittext_white_rounded"/>
    <EditText
        android:id="@+id/etx_modificar_usuario_pass2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="35dp"
        android:textSize="20sp"
        android:padding="5dp"
        android:inputType="textPassword"
        android:hint="@string/repita_la_contrase_a"
        android:background="@drawable/edittext_white_rounded"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:text="@string/tipo_usuario"/>

    <Spinner
        android:id="@+id/sp_modificar_usuario_tipo"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/grid_item_corner" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black"
        android:layout_marginVertical="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        android:textStyle="italic"
        android:text="@string/solo_se_modificaran_los_datos_completados"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btnConfirmarModificarUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="20dp"
            android:background="@drawable/boton_redondeado"
            android:text="@string/confirmar" />

        <Button
            android:id="@+id/btnCancelarModificarUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="20dp"
            android:background="@drawable/boton_redondeado_danger"
            android:text="@string/cancelar" />
    </LinearLayout>

    </LinearLayout>
</ScrollView>