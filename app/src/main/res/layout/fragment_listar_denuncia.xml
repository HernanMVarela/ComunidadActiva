<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ListarDenunciaFragment"
    android:background="@color/green_100"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp"
            android:text="@string/lista_denunci"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:text="LISTADO DENUNCIAS" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/edBuscarLD"
                android:layout_width="244dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_white_rounded"
                android:minHeight="35dp"
                android:paddingLeft="5dp"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/ibtnBuscarLD"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="1dp"
                android:src="@android:drawable/ic_menu_search" />

        </RelativeLayout>

        <Spinner
            android:id="@+id/spnTipoDenuncia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_white_rounded"
            android:minHeight="35dp"
            android:textSize="18sp">

        </Spinner>

        <ListView
            android:id="@+id/listDenuncias"
            android:layout_width="match_parent"
            android:layout_height="391dp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>