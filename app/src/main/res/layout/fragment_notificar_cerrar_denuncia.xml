<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/green_100"
    tools:context=".ui.fragments.NotificarCerrarDenunciaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/green_100"
        android:layout_margin="10dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="-132dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="5dp"
                android:text="NOTIFICAR Y CERRAR DENUNCIA"
                android:textAlignment="center"
                android:textSize="20sp"
                tools:text="NOTIFICAR Y CERRAR DENUNCIA" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="5dp"
                android:gravity="start"
                android:text=""
                android:textSize="20sp"
                tools:text="Resolución" />

            <EditText
                android:id="@+id/etResolucionDenuncia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_white_rounded"
                android:gravity="top"
                android:hint="Ingrese la resolución de la denuncia"
                android:inputType="textMultiLine"
                android:lines="5"
                android:minHeight="120dp"
                android:padding="4dp"
                android:textAlignment="gravity"
                android:textSize="18sp" />


        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:paddingVertical="15dp">

        <Button
            android:id="@+id/btnDesestimarDenuncia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:textSize="18sp"
            android:background="@drawable/boton_suspender_usuario"
            android:text="DESESTIMAR DENUNCIA" />

        <Button
            android:id="@+id/btnCerrarDenuncia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:textSize="18sp"
            android:background="@drawable/boton_eliminar_publicacion"
            android:text="CERRAR PUBLICACION" />

    </LinearLayout>


</LinearLayout>