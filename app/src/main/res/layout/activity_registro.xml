<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_100"
    tools:context=".ui.activities.RegistroActivity">

    <Spinner
        android:id="@+id/spnCategoriaUserRegistro"
        android:layout_width="373dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/edittext_white_rounded"
        android:minHeight="35dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCambioPass" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="140dp"
        android:layout_height="0dp"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="4dp"
        android:gravity="start"
        android:text="@string/tipo_usuario"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/spnCategoriaUserRegistro"
        app:layout_constraintStart_toStartOf="@+id/spnCategoriaUserRegistro" />

    <Button
        android:id="@+id/btnConfirmarCambioPass"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/green_700"
        android:onClick="registrarUsuario"
        android:text="@string/aceptar"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="120dp"
        android:layout_height="122dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@color/green_100"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/etCorreoRecupero"
        app:layout_constraintEnd_toStartOf="@+id/tvCambioPass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/agregarusuario" />

    <TextView
        android:id="@+id/tvCambioPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="544dp"
        android:text="@string/registrarse"
        android:textColor="#303F9F"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/spnCategoriaUserRegistro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etCorreoRecupero"
        android:layout_width="358dp"
        android:layout_height="45dp"
        android:layout_marginBottom="51dp"
        android:ems="10"
        android:hint="@string/nombre"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/etPassRecupero"
        app:layout_constraintStart_toStartOf="@+id/etCodigoRecupero"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2" />

    <EditText
        android:id="@+id/etPassRecupero"
        android:layout_width="363dp"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="@string/nombre_de_usuario"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/etPassConfirmarRecupero"
        app:layout_constraintStart_toStartOf="@+id/etPassConfirmarRecupero"
        app:layout_constraintTop_toBottomOf="@+id/etCorreoRecupero" />

    <EditText
        android:id="@+id/etPassConfirmarRecupero"
        android:layout_width="369dp"
        android:layout_height="49dp"
        android:layout_marginBottom="45dp"
        android:ems="10"
        android:hint="@string/fecha_nacimiento"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/etCorreoRegistro"
        app:layout_constraintStart_toStartOf="@+id/etTelefonoRegistro"
        app:layout_constraintTop_toBottomOf="@+id/etPassRecupero" />

    <EditText
        android:id="@+id/etTelefonoRegistro"
        android:layout_width="359dp"
        android:layout_height="44dp"
        android:layout_marginTop="51dp"
        android:layout_marginBottom="43dp"
        android:ems="10"
        android:hint="@string/telefono"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/etCorreoRegistro"
        app:layout_constraintStart_toStartOf="@+id/etCorreoRegistro"
        app:layout_constraintTop_toTopOf="@+id/etPassConfirmarRecupero" />


    <EditText
        android:id="@+id/etCorreoRegistro"
        android:layout_width="365dp"
        android:layout_height="59dp"
        android:ems="10"
        android:hint="@string/correo_electr_nico"
        android:inputType="textPostalAddress"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout2"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout2"
        app:layout_constraintTop_toBottomOf="@+id/etPassConfirmarRecupero" />

    <EditText
        android:id="@+id/etCodigoRecupero"
        android:layout_width="363dp"
        android:layout_height="51dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:hint="@string/apellido"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/etPassRecupero"
        app:layout_constraintStart_toStartOf="@+id/etPassRecupero"
        app:layout_constraintTop_toTopOf="@+id/etCorreoRecupero" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="368dp"
        android:layout_height="63dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/etPassDosRegistro"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:hint="@string/repetir_contrase_a"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="364dp"
        android:layout_height="66dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/etCorreoRegistro"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/etPassUnoRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/contrase_a"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>