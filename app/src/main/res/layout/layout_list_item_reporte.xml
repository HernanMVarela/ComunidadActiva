<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.BuscarProyectoFragment">

<androidx.cardview.widget.CardView
    android:id="@+id/cardview_lista_reporte"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/green_500"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTituloListaReporte"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TÃ­tulo del Reporte"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_rating_star"
                android:contentDescription="Rating" />

            <TextView
                android:id="@+id/tvtRatingListaReporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvUsernameFechaListaReporte"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Publicado por username el 14-10-2023"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_distance"
                android:contentDescription="Distancia" />

            <TextView
                android:id="@+id/tvDistanciaListaReporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.3 km"
                android:textSize="14sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvEstadoRepote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/estado_pendiente"
            android:textSize="14sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>