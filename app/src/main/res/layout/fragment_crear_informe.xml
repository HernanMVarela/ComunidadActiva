<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_100"
    tools:context=".ui.crear_informe.CrearInformeFragment">

    <DatePicker
        android:id="@+id/dpFechaInicio"
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />

    <DatePicker
        android:id="@+id/dpFechaFin"
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextFechaInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="@string/fecha_inicio"
        android:inputType="date"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextFechaFin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="@string/fecha_fin"
        android:inputType="date"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/editTextFechaInicio"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="68dp" />

    <ImageButton
        android:id="@+id/btnFechaInicio"
        android:layout_width="51dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/fecha_inicio"
        android:src="@android:drawable/ic_menu_today"
        app:layout_constraintStart_toEndOf="@+id/editTextFechaInicio"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="40dp" />

    <ImageButton
        android:id="@+id/btnFechaFin"
        android:layout_width="51dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/fecha_fin"
        android:src="@android:drawable/ic_menu_today"
        app:layout_constraintStart_toEndOf="@+id/editTextFechaFin"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="120dp" />

    <Spinner
        android:id="@+id/spTipoInforme"
        android:layout_width="290dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_grey_roundead"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="68dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnCrearProyecto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="316dp"
        android:layout_weight="1"
        android:background="@drawable/boton_redondeado"
        android:text="@string/crear_informe"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/spTipoInforme"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:contentDescription="@string/tipo_informe"
        android:hint="@string/tipo_informe"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/editTextFechaFin"
        tools:layout_editor_absoluteX="68dp"
        tools:text="@string/tipo_informe"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>