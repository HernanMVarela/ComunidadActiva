<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_100"
    tools:context=".ui.fragments.CrearInformeAdminFragment">

    <TextView
        android:id="@+id/tvInformeAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="57dp"
        android:text="@string/crear_informe_admin"
        android:textColor="#303F9F"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/etFechaFinInformeAdmin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etFechaInicioInformeAdmin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="53dp"
        android:ems="10"
        android:hint="@string/fecha_inicio_informe_admin"
        android:inputType="none"
        app:layout_constraintBottom_toBottomOf="@+id/etFechaFinInformeAdmin"
        app:layout_constraintEnd_toStartOf="@+id/etFechaFinInformeAdmin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etFechaFinInformeAdmin" />

    <EditText
        android:id="@+id/etFechaFinInformeAdmin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="555dp"
        android:ems="10"
        android:hint="@string/fecha_fin_informe_admin"
        android:inputType="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etFechaInicioInformeAdmin"
        app:layout_constraintTop_toBottomOf="@+id/tvInformeAdmin" />

    <Button
        android:id="@+id/btnUsuariosActivosPorRol"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="468dp"
        android:backgroundTint="@color/green_700"
        android:onClick="usuariosActivosPorRol"
        android:text="@string/usuarios_activos_por_rol"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnUsuariosNuevosRegistrados"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="408dp"
        android:backgroundTint="@color/green_700"
        android:onClick="usuariosNuevosRegistrados"
        android:text="@string/usuarios_nuevos"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnUsuariosPorEstado"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="348dp"
        android:backgroundTint="@color/green_700"
        android:onClick="usuariosPorEstado"
        android:text="@string/usuarios_por_estado"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnReportesPorCategoria"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="288dp"
        android:backgroundTint="@color/green_700"
        android:onClick="reportesPorCategoria"
        android:text="@string/reportes_por_categoria"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>